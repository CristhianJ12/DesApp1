<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:gravity="center"
    tools:context=".retos.Reto4">

    <EditText
        android:id="@+id/calificacion1"
        android:hint="Ingresa la calificación 1"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/calificacion2"
        android:hint="Ingresa la calificación 2"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/calificacion3"
        android:hint="Ingresa la calificación 3"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/calificacion4"
        android:hint="Ingresa la calificación 4"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para calcular el promedio -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_calcular_promedio"
        android:text="Calcular Promedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Mostrar el resultado final -->
    <TextView
        android:id="@+id/resultado_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"/>

</androidx.appcompat.widget.LinearLayoutCompat>
